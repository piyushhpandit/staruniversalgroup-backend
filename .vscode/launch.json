{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node.js Backend",
      "program": "${workspaceFolder}/server.js",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "PORT": "4000"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
